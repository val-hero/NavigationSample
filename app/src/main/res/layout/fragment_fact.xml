<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="16dp"
    tools:context="com.example.navigationsample.FactFragment"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/navigate_back_button"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_width="36dp"
        android:layout_marginTop="14dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fact_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        tools:text="Some fact about chosen animal Some fact about chosen animal Some fact about chosen animal"
        />

    <Button
        android:id="@+id/show_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="показать картинку"
        app:layout_constraintTop_toBottomOf="@id/fact_text"
        android:layout_marginTop="24dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>